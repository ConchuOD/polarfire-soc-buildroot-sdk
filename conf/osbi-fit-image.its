/dts-v1/;

/ {
        description = "U-Boot fitImage for the MPFS";
        #address-cells = <1>;

        images {
                kernel@vmlinux.bin {
                        description = "Linux kernel";
                        data = /incbin/("../work/vmlinux.bin");
                        type = "kernel";
                        arch = "riscv";
                        os = "linux";
                        compression = "none";
                        load = <0x80200000>;
                        entry = <0x80200000>;
                        hash@1 {
                                algo = "sha256";
                        };
                };
                ramdisk@initramfs.cpio.gz {
                        description = "buildroot initramfs";
                        data = /incbin/("../work/initramfs.cpio.gz");
                        type = "ramdisk";
                        arch = "riscv";
                        os = "linux";
                        load = <0x84000000>;
                        hash-1 {
                                algo = "sha256";
                        };
                };
                fdt@riscvpc.dtb {
                        description = "Flattened Device Tree blob";
                        data = /incbin/("../work/riscvpc.dtb");
                        type = "flat_dt";
                        arch = "riscv";
                        compression = "none";
                        load = <0x82200000>;
                        hash@1 {
                                algo = "sha256";
                        };
                };
	};

        configurations {
                default = "conf@riscvpc.dtb";
                conf@riscvpc.dtb {
                        description = "1 Linux kernel, initramfs, FDT blob";
                        kernel = "kernel@vmlinux.bin";
                ramdisk = "ramdisk@initramfs.cpio.gz";
                        fdt = "fdt@riscvpc.dtb";
                        hash@1 {
                                algo = "sha256";
                        };
                };
	};
};
