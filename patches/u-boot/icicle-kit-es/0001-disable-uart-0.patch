+++ b/arch/riscv/dts/microchip-mpfs-icicle-kit.dts
@@ -14,7 +14,7 @@
 	compatible = "microchip,mpfs-icicle-kit";
 
 	aliases {
-		serial0 = &uart0;
+		serial0 = &uart1;
 		ethernet0 = &emac1;
 	};
 
@@ -234,7 +234,7 @@
 			interrupts = <90>;
 			clock-frequency = <150000000>;
 			clocks = <&clkcfg CLK_MMUART0>;
-			status = "okay";
+			status = "disabled";
 		};
 		clkcfg: clkcfg@20002000 {
 			compatible = "microchip,mpfs-clkcfg";
